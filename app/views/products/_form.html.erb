<%= form_for(@product) do |f| %>
  <% if @product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
      <% @product.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
      <strong>Nazwa:</strong>
    <%= f.text_field :title %>
  </div>
  <div class="field">
      <strong>Opis:</strong><br>
    <%= f.text_area :description, :class => "tinymce", :rows => 30, :cols => 100 %>
    <%= tinymce :alternate%>
  </div>
  <div class="field">
      <strong>Adres obrazka:</strong><br>
    <%= f.text_field :image_url %>
  </div>
  <div class="field">
      <strong>Cena:</strong><br>
    <%= f.text_field :price %>
  </div>
  <div class="actions">
    <%= f.submit "Zapisz",:class => 'button small radius'%>
  </div>
<% end %>
