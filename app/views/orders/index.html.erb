
<h1>Złożone zamówienia</h1>

<table>
  <tr>
    <th>Imię</th>
    <th>Adres</th>
    <th>Email</th>
    <th>Sposób zapłaty</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @orders.each do |order| %>
  <tr>
    <td><%= order.name %></td>
    <td><%= order.address %></td>
    <td><%= order.email %></td>
    <td><%= order.pay_type %></td>
    <td><%= link_to 'Pokaż', order %></td>
    <td><%= link_to 'Edytuj', edit_order_path(order) %></td>
    <td><%= link_to 'Usuń', order, :data => {:confirm => 'Na pewno?'},
              :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<% link_to 'New Order', new_order_path %>
<!-- START_HIGHLIGHT -->
<p><%= will_paginate @orders %></p>
